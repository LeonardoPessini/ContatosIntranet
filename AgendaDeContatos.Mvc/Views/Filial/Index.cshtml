@model IEnumerable<FilialViewModel>

<div class="container">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Filiais</h2>
        <a class="btn btn-primary" asp-area="" asp-controller="Filial" asp-action="Create" role="button">Adicionar</a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td></td>
                <td>Id</td>
                <td>Nome</td>
                <td>Cidade</td>
                <td>Estado</td>
                <td>CNPJ</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><a asp-controller="Filial" asp-action="Edit" asp-route-id="@item.Id">Editar</a></td>
                    <td>@item.Id</td>
                    <td>@item.Nome</td>
                    <td>@item.Cidade</td>
                    <td>@item.Estado</td>
                    <td>@item.Cnpj</td>
                </tr>
            }
        </tbody>
    </table>
</div>